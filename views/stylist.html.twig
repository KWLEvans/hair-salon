{% extends 'base.html.twig' %}

{% block title %}{{ stylist.getName() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col col-7">
            <div class="card">
                <h3 class="card-header">{{ stylist.getName() }}</h3>
                <div class="card-block">
                    <h6 class="card-subtitle text-muted">Click to edit</h6>
                    <br>
                    <ul>
                        {% for client in clients %}
                            <a href='/clients/{{ client.getId() }}/edit'><li>{{ client.getName() }}</li></a>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col col-5">
            <div class="card">
                <h2 class="card-header">Add a client</h2>
                <div class="card-block">
                    <form action="/stylists/{{ stylist.getId() }}" method="post" id="add-client-form" class="form-group">
                        <label for="name">Name:</label>
                        <input id="name" name="name" class="form-control" type="text">
                        <button type="submit" class="btn btn-success">Add Client</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
